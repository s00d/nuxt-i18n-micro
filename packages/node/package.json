  },
  "dependencies": {
    "@i18n-micro/core": "workspace:*",
    "@i18n-micro/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "@types/jest": "catalog:"
  },
  "scripts": {
    "build": "vite build",
    "dev": "cd playground && npm run dev",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  }
