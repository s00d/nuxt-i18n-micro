{
  "name": "@i18n-micro/vue",
  "version": "1.3.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@i18n-micro/core": "workspace:*",
    "@i18n-micro/types": "workspace:*"
  },
  "peerDependencies": {
    "vue": "catalog:",
    "vue-router": "catalog:"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "vue": "catalog:",
    "vue-router": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "@types/jest": "catalog:",
    "@vue/test-utils": "catalog:",
    "jest-environment-jsdom": "catalog:"
  },
  "scripts": {
    "build": "vite build",
    "dev": "cd playground && vite",
    "dev:ssr": "cd playground && node server.js",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  }
}
